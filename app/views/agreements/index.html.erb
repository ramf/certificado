<div class="search">
<%= search_form_for @q do |f| %>
    <%= f.search_field :client_name_cont, class: "form-control", placeholder: 'Pesquisar por nome ou matrícula' %>
  </div>
  <div class="buttons">
    <%= button_tag type: "submit", title: "Pesquisar", class: "btn btn-success " do %>
      <%= fa_icon("search") %>
    <% end %>
    <%= link_to agreements_path, title: "Limpar pesquisa", class: "btn btn-danger" do %>
      <%= fa_icon("close") %>
    <% end %>
    </div>
<br>

<h1>Todos os certificados criados</h1>
<div class="panel panel-default">
        <div class="panel-heading">

<br>
<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.agreement.nome_certificado")%></th>
      <th><%= t("activerecord.attributes.agreement.description3")%></th>
      <th><%= t("activerecord.attributes.agreement.email1")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @agreements.each do |agreement| %>
      <tr>
        <td><%= agreement.client_name %></td>
        <td><%= agreement.description %></td>
        <td><%= agreement.email %></td>
        <td><%= link_to fa_icon("eye", title: "Visualizar"), agreement, class: "btn btn-primary" %></td>
        <td><%= link_to fa_icon("pencil-square-o", title: "Editar"), edit_agreement_path(agreement), class: "btn btn-info" %></td>
        <td><%= link_to fa_icon("envelope", title: "Enviar por e-mail"), send_email_agreement_path(agreement), class: "btn btn-success" %></td>
        <td><%= link_to fa_icon("file-pdf-o", title: "Abrir PDF"), export_agreement_path(agreement), target: "_blank", class: "btn btn-warning" %></td>
        <td><%= link_to fa_icon("trash-o", title: "Excluir"), agreement, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-md-12">

    </div>
    <%= link_to fa_icon("certificate", text: "Novo Certificado"), new_agreement_path, class: "btn btn-success" %>
  </div>
</div>
<% end %>

<div>
  <%= paginate @agreements %>
</div>
