<p id="notice"><%= notice %></p>

<h1>CERTIFICADOS</h1>

<div class="col-md-12">
  <%= link_to t("app.new"), new_agreement_path, class: "btn btn-success" %>
</div>

<br>
<table class="table table-striped">
  <thead>
    <tr>

      <th>Nome</th>
      <th>Metas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agreements.each do |agreement| %>
      <tr>
        <td><%= agreement.client_name %></td>
        <td><%= agreement.description %></td>
        <td><%= link_to t("app.show"), agreement, class: "btn btn-primary" %></td>
        <td><%= link_to t("app.edit"), edit_agreement_path(agreement), class: "btn btn-info" %></td>
        <td><%= link_to t("app.destroy"), agreement, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <td><%= link_to t("app.export"), export_agreement_path(agreement), target: "_blank", class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="col-md-12">
  <%= link_to t("app.new"), new_agreement_path, class: "btn btn-success" %>
</div>
