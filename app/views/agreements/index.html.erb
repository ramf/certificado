<h1><%= t("app.certificado")%></h1>
<div class="panel panel-default">
        <div class="panel-heading">

<br>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= t("activerecord.attributes.agreement.nome_certificado")%></th>
      <th>Metas</th>
      <th><%= t("activerecord.attributes.agreement.email")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @agreements.each do |agreement| %>
      <tr>
        <td><%= agreement.client_name %></td>
