<div class="container"
  <div class="row">
    <br/>
    <br/>
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
                <h3 class="panel-title"><%= "Identifique-se" %></h3>
      </div>

      <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
    <fieldset>

      <div class="field">
        <%= f.label :matricula %><br/>
        <%= f.text_field :username, autofocus: true, class: "form-control", placeholder:
        "MatrÃ­cula" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"senha", type:"password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "control-label" %>
          </label>
        </div>
    </fieldset>
      <% end %>

      <div class="form-group">
      <%= f.submit ("Entrar"), class: "btn btn-lg btn-success btn-block" %>
      </div>
    <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
