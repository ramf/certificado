<p id="notice"><%= notice %></p>

<h1><th><%= t("activerecord.models.texts") %></th></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.agreement.shortdescription") %></th>
      <th><%= t("activerecord.attributes.agreement.description") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @texts.each do |text| %>
      <tr>
        <td><%= text.shortdescription %></td>
        <td><%= text.description %></td>
        <td><%= link_to t("app.show"), text, class: "btn btn-primary" %></td>
        <td><%= link_to t("app.edit"), edit_text_path(text), class: "btn btn-warning" %></td>
        <td><%= link_to t("app.destroy"), text, method: :delete, data: { confirm: t("app.messages.are_you_sure") }, class: "btn btn-danger" %></td>
        <td><%= link_to t("app.new1"), new_agreement_path, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-md-12">
<%= link_to t("activerecord.attributes.agreement.new_text"), new_text_path, class: "btn btn-success" %>
</div>
